{
  "api_keys": {
    "groq": "YOUR_GROQ_API_KEY_HERE",
    "newsapi": "",
    "cricketdata": "YOUR_CRICKET_API_KEY_HERE",
    "omdb": ""
  },
  "active_genres": {
    "tv-shows": true,
    "movies": true,
    "cricket": true,
    "current-affairs": true,
    "science": true,
    "custom": true
  },
  "scraper_settings": {
    "rate_limit_ms": 2000,
    "max_concurrent_requests": 3,
    "timeout_ms": 10000,
    "max_retries": 3,
    "retry_delay_ms": 1000
  },
  "cache_settings": {
    "enabled": true,
    "cache_directory": "./cache",
    "transcripts_cache_days": 30,
    "news_cache_days": 7,
    "clear_on_start": false
  },
  "ai_settings": {
    "provider": "groq",
    "model": "llama-3.3-70b-versatile",
    "temperature": 0.7,
    "max_tokens": 8000,
    "questions_per_transcript": 20,
    "questions_per_article": 10,
    "difficulty_distribution": {
      "easy": 35,
      "medium": 45,
      "hard": 20
    }
  },
  "output_settings": {
    "base_directory": "./data",
    "format": "json",
    "pretty_print": true,
    "create_backups": true
  },
  "logging": {
    "enabled": true,
    "level": "info",
    "log_file": "./logs/scraper.log"
  }
}
