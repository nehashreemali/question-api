      "juz": 30,
      "manzil": 7,
      "page": 591,
      "ruku": 529,
      "hizbQuarter": 237,
      "sajda": false
    },
    {
      "number": 5957,
      "text": "REMIND, THEN, [others of the truth, regardless of] whether this reminding [would seem to] be of use [or not]:",
      "numberInSurah": 9,
      "juz": 30,
      "manzil": 7,
      "page": 591,
      "ruku": 529,
      "hizbQuarter": 237,
      "sajda": false
    },
    {
