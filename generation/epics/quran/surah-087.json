      "numberInSurah": 5,
      "juz": 30,
      "manzil": 7,
      "page": 591,
      "ruku": 529,
      "hizbQuarter": 237,
      "sajda": false
    },
    {
      "number": 5954,
      "text": "WE SHALL teach thee, and thou wilt not forget [aught of what thou art taught],",
      "numberInSurah": 6,
      "juz": 30,
      "manzil": 7,
      "page": 591,
      "ruku": 529,
      "hizbQuarter": 237,
      "sajda": false
    },
    {
