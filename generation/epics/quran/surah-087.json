      "numberInSurah": 2,
      "juz": 30,
      "manzil": 7,
      "page": 591,
      "ruku": 529,
      "hizbQuarter": 237,
      "sajda": false
    },
    {
      "number": 5951,
      "text": "and who determines the nature [of all that exists], and thereupon guides it [towards its fulfilment],",
      "numberInSurah": 3,
      "juz": 30,
      "manzil": 7,
      "page": 591,
      "ruku": 529,
      "hizbQuarter": 237,
      "sajda": false
    },
    {
